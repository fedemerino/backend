<hr />
<div style="display:flex;justify-content:center;margin-top:3rem;height:100%">
  <div class="loginContainer">
    <p>Login</p>
    <form action="/session/login" method="POST">
      <div style="display:flex;flex-direction:column;gap:1rem;margin-top:1rem; width:25vw;">
        <input type="text" name="email" placeholder="email" required />
        <input type="password" name="password" placeholder="Password" required />
         {{#if error}}
            <p style="color: red;">{{error}}</p>
        {{/if}}
        <a href="/session/forgotPassword" style="color:rgb(11, 11, 173);font-size:small">I forgot my password</a>
        <input type="submit" value="Login" style="width:120px" />
      </div>
    </form>
    <p style="margin:1rem 0rem 1rem 0rem;">OR</p>
