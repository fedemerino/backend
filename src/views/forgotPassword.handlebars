<div style="display:flex;justify-content:center;margin-top:3rem;height:100%">
  <div class="loginContainer">
    <p>Recover password</p>
    <form action="/session/forgotPassword" method="POST">
      <div style="display:flex;flex-direction:column;gap:1rem;margin-top:1rem; width:25vw;">
        <input type="text" name="email" placeholder="email" required />
        <input type="password" name="password" placeholder="New password" required />
        <input type="submit" value="Send" style="width:120px"/>
      </div>
    </form>
  </div>
</div>